<Window x:Class="PaycheckCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaycheckCreator"
        mc:Ignorable="d"
        Title="Paycheck Creator" Height="450" Width="800">

    <Grid>
        <TextBlock x:Name="Title" HorizontalAlignment="Left" Margin="247,35,0,0" TextWrapping="Wrap" Text="Welcome to the Paycheck Creator" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="274,85,0,0" TextWrapping="Wrap" Text="To create a new paycheck, please click on the button. You may also save an existing user and continue using it at a later date just by simply adding the date and hourly rate used. " VerticalAlignment="Top" Height="92" Width="269"/>
        <Button x:Name="StartButton" Content="Create New Paycheck" HorizontalAlignment="Left" Margin="637,298,0,0" VerticalAlignment="Top" Width="130" Height="36" Click="StartButton_Click"/>
        <Button x:Name="LoadButton" Content="Load Existing Paycheck" HorizontalAlignment="Left" Margin="637,362,0,0" VerticalAlignment="Top" Width="130" Height="36
                " Click="LoadButton_Click"/>
    </Grid>

</Window>
